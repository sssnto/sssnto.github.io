.body-wrap{
    margin: 10px 10px 80px 10px !important
}

.left-col {
    display: none;
}
.mid-col {
    left: 0;
}
#header{
    .header-nav{
        position: relative;
    }
}
.header-author{
    &.fixed{
        position: fixed;
        top: -13px;
        width: 100%;
        color: #FFF;
        font-family: Roboto, "Roboto", serif;
    }
}
.overlay{
    background: color-primary;
    .slider-trigger{
        position: absolute;
        z-index: 101;
        bottom: 0;
        left: 0;
        width: 42px;
        height: 42px;
        &:before{
            color: #FFF;
            content: "\f00b";
            font: 16px;
            width: 16px;
            height: 16px;
            margin-left: 9px;
            margin-top: 14px;
            display: block;
        }
    }
}
.article-header{
    border-left: none;
    padding-bottom: 0px;
}
.header-subtitle{
    padding: 10px 24px 0 24px;
	text-align: center;
	color: rgba(255,255,255,.5);
	font-size: 0.9rem;
	line-height: 25px;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.article-info-index.article-info{
  padding-top: 10px;
  margin: 0;
  border-top: 1px solid #ddd;
}
.article-info-post.article-info{
    margin: 0;
    padding-top: 10px;
    border: none;
}
.article-more-link{
    a{
        float:right;
    }
}
#viewer-box .viewer-box-l{
    font-size: 14px;
}
.article{
    margin: 0 0 40px 0;
    font-size: 14px;
    .img{
        max-width: 100%;
    }
    .article-entry{
        padding-left: 0;
        padding-right: 0;
    }
    .article-title{
        font-size: 1.2em;
        display: block;
        margin: 0;
    }
    .article-meta{
        width: auto;
        height: 20px;
        margin-top: -20px;
        position: ralative;
        .article-date{
            font-size: 12px;
            border-radius: 0;
            color: #666;
            background: none;
            height: auto;
            padding: 0;
            margin: 0;
            width: 100%;
            text-align: left;
            margin-left: 10px;
            time{
                width: auto;
                float: right;
                margin-right: 10px;
            }
        }
        .article-tag-list{
            margin-top: 7px;
            position: absolute;
            right: 10px;
            top: 0;
            &:before{
                float: left;
                margin-top: 1px;
                left: 0;
            }
            .article-tag-list-item{
                float: left;
                padding-left: 0;
                width: auto;
                max-width: 83px;
            }
        }
        .article-category{
            margin-top: 7px;
            position: absolute;
            right: 10px;
            top: -30px;
            &:before{
                float: left;
                margin-top: 1px;
                left: 15px;
            }
            .article-category-link{
                max-width: 83px;
                width: auto;
                padding-left:10px;
            }
        }
    }
    .article-nav-link-wrap{
        margin: 5px 0;
        strong{
            float: left;
            margin-right: 5px;
        }
    }
    #article-nav-older{
        float: none;
        display: block;
    }
}

.top-article-tile{
    color: #FFF;
    background: color-title; 
    border-left: 5px solid #ffbf6f;
    margin-left: 0;
    font-weight: 300;
    line-height: 35px;
    margin-bottom: 20px;
    font-size: 1rem;
    font-family: "Fjalla One", serif;
    -o-transition: color .3s;
    transition: color .3s
}
.share{
    padding: 3px 10px;
}
.duoshuo {
    padding: 0 13px;
}
#disqus_thread {
    padding: 0 13px;
}

#mobile-nav{
    display: block;
    -webkit-user-select: none;
    user-select: none;
    -webkit-touch-callout: none;
    cursor: default !important;
    background: color-primary;
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.35);
}

#page-nav .extend{
    opacity: 1;
}

.instagram .open-ins{
    left: 2px;
    top: -30px;
    color: #aaa;
}
.info-on-right{
    float: initial;
}
.archives-wrap{
    margin: 10px 10px 0px;
    padding: 10px;
    .archive-article-title{
        font-size: 14px;
    }
    .archive-year-wrap{
        position: relative;
        padding: 0 0 0 0;
        a{
            padding: 0 0 0 0;
        }
    }
    .article-meta{
        .archive-article-date{
            font-size: 14px;
            margin-right: 10px;
            margin-top: -5px;
        }
        .article-tag-list-link{
            font-size: 12px;
        }
    }
}
.archives{
    .archive-article{
        padding: 10px 0;
        margin-left: 0;
    }
}

#footer {
    .footer-left{
        float: initial;
        margin-bottom: 10px;
    }
    .footer-right{
        float: initial;
    }
}
